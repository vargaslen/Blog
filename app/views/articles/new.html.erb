<div style="width:80%;margin:0 auto;">
  <h1>Crea un artículo</h1>
  <%= form_for(@article) do |f| %>
    <div class="field">
      <%  @article.errors.full_messages.each do |message| %>
      <div class="be-red white top-space">
        *** <%= message %>
      </div>
      <% end %>
      <%= f.text_field :title , placeholder: "Titulo", class: "form-control"%>
    </div>
    <div class="field">
      <%= f.text_area :body , placeholder: "Escribe aquí el artículo", style:"height:250px;",class: "form-control"%>
    </div>
    <div class="field">
      <%= f.submit "Guardar" , class:"btn be-red white"%>
    </div>
  <%end%>
</div>
